<Window x:Class="SFC.Canteen.Views.NewStocks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFC.Canteen.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        SizeToContent="WidthAndHeight"
        Title="Add Stocks" >
    <StackPanel Orientation="Horizontal" Margin="40">
        <TextBlock Text="Quantity: "/>
        <TextBox x:Name="Quantity" x:FieldModifier="public" Width="174"/>
        <Button Content="Cancel" Margin="10 0" IsCancel="True"/>
        <Button Content="Accept" IsDefault="True"
                Click="ButtonBase_OnClick"/>
    </StackPanel>
</Window>
